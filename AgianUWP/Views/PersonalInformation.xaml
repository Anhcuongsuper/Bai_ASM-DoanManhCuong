<Page
    x:Class="AgianUWP.Views.PersonalInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AgianUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="My Account" HorizontalAlignment="Center"/>
            <TextBox x:Name="Name" Header="Name"/>
            <TextBox x:Name="AvatarUrl" Header="AvatarUrl"/>
            <Image x:Name="Avatar" Width="150" Height="150" HorizontalAlignment="Left" Source="Assets/SplashScreen.scale-200.png"/>
            <TextBox x:Name="Email" Header="Email"/>
            <TextBox x:Name="PassWord" Header="Password"/>
            <TextBox x:Name="Phone" Header="Phone"/>
            <TextBox x:Name="Address" Header="Address"/>
            <TextBox x:Name="Introduction" Header="Introduction"/>
            <TextBox x:Name="Birthday" Header="Birthday"/>
            <TextBox x:Name="Gender" Header="Gender"/>
        </StackPanel>
    </Grid>
</Page>
